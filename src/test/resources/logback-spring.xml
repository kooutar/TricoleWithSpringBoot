<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- âœ… Active les couleurs -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter"/>
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter"/>

    <!-- âœ… ModÃ¨le de log colorÃ© -->
    <property name="LOG_PATTERN" value="%clr(%d{HH:mm:ss}){faint} %clr(%-5level) %clr(%logger{36}){cyan} - %msg%n"/>

    <!-- âœ… Console appender (affiche dans la console IntelliJ) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- âœ… Niveau de log global -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- ðŸ‘‡ Tu peux augmenter le niveau de log pour ton package -->
    <logger name="com.kaoutar.testSpring" level="DEBUG"/>
</configuration>
